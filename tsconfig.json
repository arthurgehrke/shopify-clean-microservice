{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",                     
    "outDir": "./",                        
    "rootDir": "./src",                       
    "strict": true,                          
    "esModuleInterop": true,
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": []
}
